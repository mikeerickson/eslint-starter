{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": "airbnb",
    "parser": "typescript-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "tsx": true
        }
    },
    "plugins": [
        "typescript"
    ],
    "rules": {
        "comma-dangle": 0,
        "curly": "error",
        "max-len": 0,
        "quotes": [
            "warn",
            "single"
        ],
        "semi": "error",
        "padded-blocks": "error",
        "typescript/class-name-casing": "error"
    }
}